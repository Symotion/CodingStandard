{
    "name": "symplify/coding-standard",
    "description": "Set of Symplify rules for PHP_CodeSniffer and PHP CS Fixer.",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "nette/utils": "^3.2",
        "friendsofphp/php-cs-fixer": "^3.13",
        "symfony/dependency-injection": "6.1.*",
        "symplify/symplify-kernel": "^11.2",
        "symplify/package-builder": "^11.2",
        "symplify/autowire-array-parameter": "^11.2",
        "symplify/rule-doc-generator-contracts": "^11.2"
    },
    "require-dev": {
        "symplify/easy-coding-standard": "^11.1.31",
        "symplify/symplify-kernel": "^11.2",
        "symplify/smart-file-system": "^11.2",
        "symfony/framework-bundle": "6.1.*",
        "squizlabs/php_codesniffer": "^3.7.1",
        "symplify/easy-testing": "^11.2",
        "phpunit/phpunit": "^9.5.26",
        "symplify/rule-doc-generator": "^11.2",
        "cweagans/composer-patches": "^1.7",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpstan": "^1.9",
        "rector/rector": "*",
        "symplify/easy-ci": "^11.1",
        "symplify/monorepo-builder": "^11.1.24",
        "symplify/phpstan-extensions": "^11.1"
    },
    "autoload": {
        "psr-4": {
            "Symplify\\CodingStandard\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Symplify\\CodingStandard\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "11.2-dev"
        },
        "enable-patching": true,
        "patches": {
            "symfony/dependency-injection": [
                "https://raw.githubusercontent.com/symplify/vendor-patch-files/main/patches/generic-php-config-loader.patch"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "cweagans/composer-patches": true,
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "check-cs": "vendor/bin/ecs check --ansi",
        "fix-cs": [
            "vendor/bin/ecs check --fix --ansi",
            "vendor/bin/ecs check-markdown README.md docs/rules_overview.md --fix --ansi"
        ],
        "phpstan": "vendor/bin/phpstan analyse --ansi  --error-format symplify",
        "rector": "vendor/bin/rector process --dry-run --ansi",
        "release": "vendor/bin/monorepo-builder release patch --ansi",
        "docs": "vendor/bin/rule-doc-generator generate src --output-file docs/rules_overview.md --ansi"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
